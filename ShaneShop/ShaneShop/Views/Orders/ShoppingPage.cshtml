
@{
    ViewBag.Title = "選購商品頁";
}

@section scripts
{
    <script>
        angular.module("MainApp", ["ngMaterial", "ngMessages"])
            .controller("MainCtrl", ["$http", function ($http) {
                common.log("angular");
            }]);
    </script>
}

<div ng-module="MainApp" ng-controller="MainCtrl as ctrl" style="padding-top: 50px">
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse">選購商品</a>
            </h4>
        </div>
        <div id="collapse" class="panel-collapse collapse in">
            <div class="panel-body">

                <form class="form-horizontal" role="form" action="@Url.Action("CreateOrder", "Orders")" method="POST">
                    <div class="row">

                        <div class="col-md-12">
                            <md-input-container class="md-block">
                                <label>會員ID</label>
                                <input type="text"
                                       class="form-control"
                                       required="required"
                                       name="CustomerID"
                                       maxlength="20"
                                       value="LAUGB"
                                       readonly="readonly" />
                            </md-input-container>
                        </div>
                        <div class="col-md-12">
                            <md-input-container class="md-block">
                                <label>寄送城市</label>
                                <input type="text"
                                       class="form-control"
                                       name="ShipCity"
                                       maxlength="20"
                                       value="">
                            </md-input-container>
                        </div>
                        <div class="col-md-12">
                            <md-input-container class="md-block">
                                <label>寄送地址</label>
                                <input type="text"
                                       class="form-control"
                                       name="ShipAddress"
                                       maxlength="100"
                                       value="">
                            </md-input-container>
                        </div>
                        <div class="col-md-12">
                            <md-input-container>
                                <label>訂購商品</label>
                                <md-select name="ProductID" ng-model="ProductID">
                                    <md-option value="3" selected>Aniseed Syrup</md-option>
                                    <md-option value="8">Northwoods Cranberry Sauce</md-option>
                                    <md-option value="22">Gustaf's Knackebrod</md-option>
                                    <md-option value="43">Ipoh Coffee</md-option>
                                </md-select>
                            </md-input-container>
                        </div>

                        <div class="col-md-12">
                            <md-input-container>
                                <label>數量</label>
                                <md-select name="Quantity" ng-model="Quantity">
                                    <md-option value="10" selected>10</md-option>
                                    <md-option value="20">20</md-option>
                                    <md-option value="30">30</md-option>
                                    <md-option value="40">40</md-option>
                                    <md-option value="50">50</md-option>
                                </md-select>
                            </md-input-container>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">
                                確定
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
